<%= form_for(line) do |f| %>
  <% if line.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(line.errors.count, "error") %> prohibited this line from being saved:</h2>

      <ul>
      <% line.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-4">
      <%= f.label :departure_city %>
      <%= f.text_field :departure_city %>
    </div>

    <div class="col-xs-4">
      <%= f.label :departure_time %>
      <%= f.datetime_select :departure_time %>
    </div>

    <div class="col-xs-2">
      <%= f.label :seats_total %>
      <%= f.number_field :seats_total %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <%= f.label :arrival_city %>
      <%= f.text_field :arrival_city %>
    </div>

    <div class="col-xs-4">
      <%= f.label :arrival_time %>
      <%= f.time_select :arrival_time %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
