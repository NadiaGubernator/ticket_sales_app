    <section class="user_info">
      <h1>
        <%= @user.name %> <%= @user.surname %>
      </h1>
      <h2>
        <% if @user.admin %>
          Administrator<br>
        <% end %>
        <br><%= @user.email %>
      </h2>
    </section>
  </aside>
</div>
