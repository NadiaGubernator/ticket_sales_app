<% provide(:title, "Profile") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %> <%= @user.surname %>
      </h1>
      <h2>
        <% if @user.admin %>
          Administrator<br>
        <% end %>
        <br><%= @user.email %>
      </h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.tickets.any? %>
      <h3>Tickets (<%= @user.tickets.count %>)</h3>
      <ol class="tickets">
        <%= render @tickets %>
      </ol>
      <%= will_paginate @tickets %>
    <% end %>
</div>
</div>
